#
# kyoshiro's screenrc
# inspired by gentoo terminal colors

# scrollback buffer lines
defscrollback 5000

# cation info bar
caption always '%{= dg} %H %{G}| %{B}%l %{G}|%=%?%{d}%-w%?%{r}(%{d}%n %t%? {%u} %?%{r})%{d}%?%+w%?%=%{G}| %{B}%M %d %c:%s '

# hardstatus info bar
#hardstatus lastline "%?%{kb}%-Lw%?%{bg}%n*%f %t%?(%u)%?%?%{kb}%+Lw%?"
termcapinfo xterm* 'hs:ts=\E]0;:fs=\007:ds=\E]0;\007'
defhstatus "screen ^E (^Et) | $USER@^EH"

shelltitle '~ |zsh'

# Terminal Info
term xterm-256color

# startup behaviour
startup_message off
defutf8 on

screen -t root 0 sudo -s -H
screen 2
screen 1


