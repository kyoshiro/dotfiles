general {
        colors = true
        interval = 5
}

order += "wireless mlan0"
order += "ethernet enp3s0"
order += "ethernet enp5s0"
order += "cpu_temperature 0"
order += "load"
order += "memory"
order += "disk /"
order += "battery 0"
order += "tztime local"
order += "tztime berlin"

wireless mlan0 {
        #format_up = " (%quality at %essid, %bitrate) %ip"
        format_up = "⏚ %bitrate"
        format_down = "⏚ down"
}

ethernet enp3s0 {
        #format_up = " %ip (%speed)"
        format_up = " %speed"
        format_down = " down"
}

ethernet enp5s0 {
        #format_up = " %ip (%speed)"
        format_up = " %speed"
        format_down = " down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "🛇 NBAT"
        status_chr = "⚡ CHR"
        status_bat = "🛢 BAT"
        status_unk = "?  UNK"
        status_full = "☻ FULL"
        path = "/sys/class/power_supply/BAT1/uevent"
        low_threshold = 10
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
        hide_if_equals_localtime = true
}

tztime berlin {
        format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Berlin"
}

load {
        format = "⏲ %5min"
}


cpu_temperature 0 {
        format = "🛈 %degrees°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

memory {
        format = "⏱ %used"
        threshold_degraded = "10%"
        format_degraded = "⏱ %free"
}

disk "/" {
        format = " %used"
        #threshold_degraded = "10%"
        #format_degraded = " %free"
}
